{
  "name": "@villedemontreal/scripting",
  "version": "3.0.0",
  "description": "Scripting core utilities",
  "exports": "./dist/src/index.js",
  "type": "module",
  "typings": "dist/src",
  "files": [
    "src",
    "dist",
    "assets"
  ],
  "scripts": {
    "clean": "rm -rf ./dist ./tsconfig.tsbuildinfo output",
    "start": "node run test",
    "compile": "node run compile",
    "test": "node run test",
    "test:parallel": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:serial": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --runInBand",
    "lint": "node run lint",
    "lint-fix": "node run lint-fix",
    "watch": "node run watch",
    "sonar-init": "node run sonar-init",
    "sonar": "node run sonar"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/villedemontreal/node-scripting.git"
  },
  "homepage": "https://github.com/villedemontreal/node-scripting.git",
  "keywords": [
    "montreal",
    "node.js",
    "utilities",
    "scripts",
    "scripting"
  ],
  "author": "Ville de Montr√©al",
  "license": "MIT",
  "dependencies": {
    "@caporal/core": "2.0.7",
    "@villedemontreal/general-utils": "5.16.8",
