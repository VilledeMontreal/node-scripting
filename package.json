    "superagent": "8.1.2"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.5.12",
    "@types/lodash-es": "4.17.12",
    "@types/node-notifier": "8.0.2",
    "@types/sinon": "10.0.11",
    "@types/superagent": "4.1.15",
    "@typescript-eslint/eslint-plugin": "7.5.0",
    "@typescript-eslint/parser": "7.5.0",
    "chai": "5.1.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
